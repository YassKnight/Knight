
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--设置启动页面的主题  直接设置背景图片，避免Activity在setContentView设置xml时的耗时操作-->
    <style name="startTheme" parent="AppTheme" >
        <item name="android:windowBackground">@mipmap/bg</item>
    </style>
    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BlueBtnStyle" >
        <item name="android:background">@drawable/ic_btn_sel</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavCommonListItemTitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="NavCommonListItemTipsText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="NavSettingDuringDivider">
        <item name="android:src">@drawable/nav_settings_divider_line</item>
        <item name="android:background">@drawable/nav_settings_multiline_middle_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:contentDescription">@null</item>

    </style>

    <style name="NavSettingDuringBtnText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bnav_setting_btn_text_selector</item>
    </style>
</resources>
